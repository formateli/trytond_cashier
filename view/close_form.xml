<form>
    <label name="date"/>
    <field name="date"/>
    <label name="number"/>
    <field name="number"/>
    <label name="cashier"/>
    <field name="cashier"/>
    <newline/>
    <group col="8" colspan="4" id="totals">
        <label name="sale_amount"/>
        <field name="sale_amount"/>
        <label name="diff"/>
        <field name="diff"/>
        <newline/>
        <label name="cash"/>
        <field name="cash"/>
        <label name="document_amount"/>
        <field name="document_amount"/>
        <label name="ccterminal_amount"/>
        <field name="ccterminal_amount"/>
        <label name="customer_receivable_amount"/>
        <field name="customer_receivable_amount"/>
    </group>
    <notebook colspan="4">
        <page name="sales">
            <field name="sales" widget="many2many" colspan="4"/>
        </page>
        <page name="ccterminals">
            <field name="ccterminals" colspan="4"/>
        </page>
        <page name="documents">
            <field name="documents" colspan="4"/>
        </page>
        <page name="customers_receivable">
            <field name="customers_receivable" colspan="4"/>
        </page>
        <page string="Info" id="info">
            <label name="company"/>
            <field name="company"/>
            <label name="currency"/>
            <field name="currency"/>
            <field name="logs" colspan="4"
                view_ids="log_action.log_view_tree,log_action.log_view_form"/>
        </page>
    </notebook>
    <group col="6" colspan="4" id="states_buttons" yfill="1">
        <group col="4" colspan="4" id="states" yfill="1">
            <label name="state"/>
            <field name="state"/>
<!--
            <group col="2" colspan="2" id="amount_1" yfill="1">
                <label name="total_lines" xalign="1.0" xexpand="1"/>
                <field name="total_lines" xalign="1.0" xexpand="0"/>
                <label name="diff" xalign="1.0" xexpand="1"/>
                <field name="diff" xalign="1.0" xexpand="0"/>
            </group>
-->
            <group col="-1" colspan="4" id="buttons">
                <button name="cancel" string="Cancel"
                    icon="tryton-cancel"/>
                <button name="draft" string="Draft"/>
                <button name="confirm" string="Confirm"
                    icon="tryton-ok"/>
                <button name="post" string="Post"
                    icon="tryton-go-next"/>
            </group>
        </group>
<!--
        <group col="2" colspan="2" id="amount_2" yfill="1">
            <label name="cash" xalign="1.0" xexpand="1"/>
            <field name="cash" xalign="1.0" xexpand="0"/>
            <label name="total_documents" xalign="1.0" xexpand="1"/>
            <field name="total_documents" xalign="1.0" xexpand="0"/>
            <label name="total" xalign="1.0" xexpand="1"/>
            <field name="total" xalign="1.0" xexpand="0"/>
        </group>
-->
    </group>
</form>
